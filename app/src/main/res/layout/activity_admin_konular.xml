<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminKonularActivity">

    <EditText
        android:id="@+id/textKonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Konu Giriniz"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/konuresm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textKonu"
        android:ems="10"
        android:hint="Resim Yolu"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/spinnerKonu"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/konuresm" />


    <Button
        android:id="@+id/btnKonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinnerKonu"
        android:text="Konu Ekle" />


    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btnKonu" />

</RelativeLayout>